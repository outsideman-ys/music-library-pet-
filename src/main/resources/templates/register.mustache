<style>

    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-image: url('images/loginFon.jpg');
    }

    main {
        flex: 1;
    }

    .input-container {
        display: flex;
        justify-content: center;
        flex-direction: column;
        padding-left: 45%;
        padding-right: 35%;
        padding-top: 5%;
    }

</style>


<body>

    {{>header}}

    <main>
        <div class="input-container">
            <form action="/register" method="post">
                <h1><b>Registration</b></h1>
                <div class="mb-3">
                    <p><label for="username" class="form-label">Username:</label></p>
                    <div><input type="text" id="username" name="username"></div>
                </div>
                <div class="mb-3">
                    <p><label for="email" class="form-label">Email</label></p>
                    <div><input type="email" id="email" name="email"></div>
                </div>
                <div class="mb-3">
                    <p><label for="password" class="form-label">Password: </label></p>
                    <div><input type="password" id="password" name="password"></div>
                </div>
                <p><input type="submit" class="btn" value="Register"></p>
            </form>
        </div>

    </main>

    {{>footer}}

</body>