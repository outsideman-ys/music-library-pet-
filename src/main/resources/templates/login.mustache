<html><head><style>

    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-image: url('/images/loginFon.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }

    main {
        flex: 1;
    }

    .input-container {
        display: flex;
        justify-content: center;
        flex-direction: column;
        padding-left: 45%;
        padding-right: 35%;
        padding-top: 5%;

    }


</style>


<body>

    {{>header}}

    <main>

        <div class="input-container">
            <form action="/login" method="post">
                <h1><b>Login</b></h1>
                <p><label for="username">Username:</label></p>
                <div><input type="text" id="username" name="username"></div>
                <p><label for="password">Password:</label></p>
                <div><input type="password" id="password" name="password"></div>
                {{#_csrf}}
                    <input type="hidden" name="{{parameterName}}" value="{{token}}">
                {{/_csrf}}
                <button type="submit">Login</button>
            </form>
        </div>
        <table style="justify-content:center;">
            <tr>
                <td width="60px"><a href="/oauth2/authorization/google">
                    <img src="/images/google.png"  width="50px" height="50px">
                </a></td>
                <td width="135px"><a href="/oauth2/authorization/google"><u>Login with Google</u></a></td>
            </tr>
        </table>
        <p style="text-align:center;">Don't have account?<a href="/register"> <u>Register now!</u></a></p>

    </main>

    {{>footer}}

</body>

