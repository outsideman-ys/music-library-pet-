<html><head><style>

    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-image: url('/images/loginFon.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }

    main {
        flex: 1;
    }

    .input-container {
        display: flex;
        justify-content: center;
        flex-direction: column;
        padding-left: 45%;
        padding-right: 35%;
        padding-top: 5%;

    }


</style>


<body>

    {{>header}}

    <main>

        <div class="input-container">
            <form>
                <h1><b>Login</b></h1>
                <div class="mb-3">
                    <p><label for="exampleInputEmail1" class="form-label">Username:</label></p>
                    <div><input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"></div>
                </div>
                <div class="mb-3">
                    <p><label for="exampleInputPassword1" class="form-label">Password:</label></p>
                    <div><input type="password" class="form-control" id="exampleInputPassword1"></div>
                </div>
                <table>
                    <tr>
                        <td width="60px"><a href="/oauth2/authorization/google">
                            <img src="/images/google.png"  width="50px" height="50px">
                        </a></td>
                        <td width="135px"><a href="/oauth2/authorization/google"><u>Login with Google</a></u>
                    </tr>
                </table>




                <p>Don't have account?<a href="/register"> <u>Register now!</u></a></p>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>

    </main>

    {{>footer}}

</body>

