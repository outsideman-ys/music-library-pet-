<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    pre {
        white-space: pre-wrap;
        word-wrap: break-word;
    }

    .difficulty {
        direction: rtl;
        display: flex;
        justify-content: center;
    }

    .difficulty input {
        display: none;
    }

    .difficulty label {
        font-size: 4em;
        color: #ccc;
        cursor: pointer;
        transition: color 0.3s;
    }

    .difficulty label:hover,
    .difficulty label:hover ~ label {
        color: gold;
    }

    .difficulty input:checked ~ label {
        color: gold;
    }

    .difficulty label:before {
        content: 'â˜…';
        transition: transform 0.3s ease;
    }

    .difficulty input:checked ~ label:before {
        transform: scale(1.2);
    }

    #difficulty-hint {
        font-size: 1.2em;
        color: #333;
        height: 20px;
        transition: opacity 0.2s;
        opacity: 0;
        display: flex;
        justify-content: center;
        padding-bottom: 20px;
    }

    #submit-difficulty {
        display:flex;
        justify-content:center;
    }

    body {
        background-color: gray;
        background-image: url('/images/loginFon.jpg');
    }

