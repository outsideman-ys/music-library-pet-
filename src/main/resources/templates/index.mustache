<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .song-container {
        display: flex;
        justify-content: center;
    }

    :root{
            --hoverButtonColor: 0.5;
        }

    .song-cell {
        text-align: center;
        border-radius: 15px;
        padding: 10px;
        margin-right: 10px;
        margin-left: 10px;
        background-color: rgb(209, 207, 207);
        border-width: 0;
        border-bottom: 4px solid rgb(56, 44, 44);
        border-right: 4px solid rgb(56, 44, 44);
        border-radius: 0.4em;
        transition: all 300ms;
    }

    .song-cell:hover{
        background-color: rgb(160, 160, 160);
        border-bottom: 4px solid rgba(0, 0, 0, 0);
        border-right: 4px solid rgba(0, 0, 0, 0);
        transform: scale(1.1);
    }

    body {
        background-color: gray;
        background-image: url('images/loginFon.jpg');
    }

    @font-face {
      font-family: Onest;
      src: url(/fonts/Onest-Regular.woff2);
    }


    .header-h1{
        position: relative;
        margin-bottom: .5rem;
    }

    .header-h1::before {
        content: "";
        position: absolute;
        border-top: 2px solid #000000;
        border-bottom: 2px solid #000000;
        height: .375rem;
        right: 50%;
        top: 50%;
        width: 31%;
        transform: translateY(-50%);
        z-index: -999;
    }

    .header-h1::after {
        content: "";
        position: absolute;
        border-top: 2px solid #000000;
        border-bottom: 2px solid #000000;
        height: .375rem;
        left: 50%;
        top: 50%;
        width: 31%;
        transform: translateY(-50%);
        z-index: -999;
    }

    .header-h1 h1 {
        font-size: 1.5rem;
        color: #000000;
        display: inline-block;
        background: rgb(209, 207, 207);
        margin-bottom: 0;
        padding-right: 1rem;
        text-transform: uppercase;
    }

    .header-h1-center {
        text-align: center;
    }

    .header-h1-center h1 {
        padding-left: 1rem;
    }



</style>

<body>

{{>header}}

<main>

    <h1 style="text-align:center; padding-top: 100px"><div class="header-h1 header-h1-center">
        <h1>Check out new songs</h1>
    </div>
    </h1>

    <div class="song-container">
        {{#dateSongs}}
        <div class="song-cell">
            <a href="/songs/{{id}}">
            <img src="/{{imagePath}}" alt="{{albumName}} album"
                 onerror="this.onerror=null; this.src='/images/default-image.jpg';" width="200px" height="200px"><br>
            <b style="font-size:large">{{songName}}</b><br>
            <u>{{bandName}}</u>
            </a>
        </div>
        {{/dateSongs}}
    </div>

    <h1 style="text-align:center; padding-top: 50px"><div class="header-h1 header-h1-center">
        <h1>Check out the most challenging songs</h1>
    </div>
    </h1>

    <div class="song-container" style="padding-top: 10px;">
        {{#ratingSongs}}
            <div class="song-cell">
                <a href="/songs/{{id}}">
                <img src="{{imagePath}}" alt="{{albumName}} album"
                     onerror="this.onerror=null; this.src='/images/default-image.jpg';" width="200px" height="200px"><br>
                <b style="font-size:large">{{songName}}</b><br>
                <u>{{bandName}}</u>
                </a>
            </div>
        {{/ratingSongs}}
    </div>
    <br><br><br>


</main>

{{>footer}}

</body>
